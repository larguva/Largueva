  <div id="output" class="result" style="display:none;"></div>
  <button class="copy-btn" id="copyBtn" style="display:none;" onclick="copyText()">Copy</button>
  
  <script>
    function simpan() {
      const surah = document.getElementById("surah").value;
      const ayat = document.getElementById("ayat").value;
      const agenda = document.getElementById("agenda").value;
      const tanggal = new Date().toLocaleDateString('id-ID', { 
        weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' 
      });

      if (!surah || !ayat || !agenda) {
        alert("Lengkapi semua data terlebih dahulu.");
        return;
      }

      const hasil = 
`ðŸ“– *Catatan Membaca Alquran*
 _${tanggal}_

â€¢ *Surah* : ${surah}
â€¢ *Ayat* : ${ayat}
â€¢ *Agenda* : ${agenda}`;

      document.getElementById("output").innerText = hasil;
      document.getElementById("output").style.display = "block";
      document.getElementById("copyBtn").style.display = "inline-block";
    }

    function copyText() {
      const text = document.getElementById("output").innerText;
      navigator.clipboard.writeText(text).then(() => {
        alert("Teks berhasil disalin, siap ditempel di WhatsApp!");
      });
    }
  </script>
